<h1> Sign In </h1>


<%= form_with url: sign_in_path, local: true do |form| %>
  <%
=begin%>
 <% if @user.errors.any? %>
    <div class="alert alert-danger">
    <% @user.errors.full_messages.each do |message|%>
      <div><%= message %></div>
    <% end %>
    </div>
  <% end %> 
<%
=end%>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "email@domain.com" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary" %>
  </div>
<% end %>